# Healthcare Queue Management System - Environment Configuration

# ==========================================
# SECURITY SETTINGS - CRITICAL
# ==========================================

# JWT Secret Key - REQUIRED FOR PRODUCTION
# ⚠️  CRITICAL: You MUST set this to a secure random value!
# ⚠️  Application will FAIL to start if not set
# Generate: openssl rand -hex 32
# Or Python: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=

# JWT Token Expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# DATABASE SETTINGS
# ==========================================

# Database URL
# For development: SQLite
DATABASE_URL=sqlite:///./queue_management.db

# For production: PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/queue_management

# For production: MySQL
# DATABASE_URL=mysql://username:password@localhost:3306/queue_management

# ==========================================
# AI & ML SETTINGS
# ==========================================

# OpenRouter API Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Local AI Model Settings
LOCAL_AI_MODEL_PATH=./models
OLLAMA_BASE_URL=http://localhost:11434

# AI Cache Settings
AI_CACHE_TTL_MINUTES=60
AI_CACHE_MAX_SIZE_MB=100

# ==========================================
# SMS & COMMUNICATION SETTINGS
# ==========================================

# Infobip SMS Configuration
INFOBIP_API_KEY=your-infobip-api-key
INFOBIP_BASE_URL=https://api.infobip.com
INFOBIP_SENDER_ID=HospitalAlert

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Environment
ENV=development
DEBUG=True

# CORS Settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=True

# Server Settings
HOST=0.0.0.0
PORT=8000

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Sentry Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn-here

# ==========================================
# EXTERNAL INTEGRATIONS
# ==========================================

# EHR System Integration (Optional)
EHR_API_URL=https://api.ehr-system.com
EHR_API_KEY=your-ehr-api-key

# Payment Processing (Optional)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# ==========================================
# FILE UPLOAD SETTINGS
# ==========================================

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE_MB=10

# Allowed file types
ALLOWED_EXTENSIONS=.csv,.xlsx,.json

# Upload directory
UPLOAD_DIR=./uploads

# ==========================================
# CACHE SETTINGS
# ==========================================

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL_SECONDS=3600

# ==========================================
# QUEUE MANAGEMENT SETTINGS
# ==========================================

# Queue priority weights
URGENT_PRIORITY_WEIGHT=10
HIGH_PRIORITY_WEIGHT=5
NORMAL_PRIORITY_WEIGHT=2
LOW_PRIORITY_WEIGHT=1

# Maximum queue size per service
MAX_QUEUE_SIZE=100

# Auto-call next patient delay (seconds)
AUTO_CALL_DELAY_SECONDS=30

# ==========================================
# EMERGENCY SETTINGS
# ==========================================

# Emergency response timeout (minutes)
EMERGENCY_RESPONSE_TIMEOUT_MINUTES=15

# Ambulance dispatch timeout (minutes)
AMBULANCE_DISPATCH_TIMEOUT_MINUTES=10

# Emergency contact numbers
EMERGENCY_CONTACT_1=+1234567890
EMERGENCY_CONTACT_2=+0987654321

# ==========================================
# ANALYTICS SETTINGS
# ==========================================

# Analytics data retention (days)
ANALYTICS_RETENTION_DAYS=365

# Performance monitoring interval (seconds)
PERFORMANCE_MONITOR_INTERVAL=60

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Enable development features
ENABLE_SWAGGER_UI=True
ENABLE_DEBUG_MODE=True

# Test database (separate from production)
TEST_DATABASE_URL=sqlite:///./test_queue_management.db